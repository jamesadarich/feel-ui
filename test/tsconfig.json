{
    "compilerOptions": {
        "target": "es5",
        "module": "umd",
        "noImplicitAny": true,
        "sourceMap": true,
        "preserveConstEnums": true
    },
    "buildOnSave": true,
    "compileOnSave": true,
    "exclude": [
        "./**/*.d.ts",
        "./end-to-end-tests/harness/**/*.ts"
    ],
    "filesGlob": [
        "./**/*.ts"
    ],
    "files": [
        "./end-to-end-tests/protractor-config.ts",
        "./menu-panel.spec.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
