{
    "compilerOptions": {
        "target": "es5",
        "module": "umd",
        "declaration": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "moduleResolution": "node"
    },
    "buildOnSave": false,
    "compileOnSave": true,
    "exclude": [
        "./**/*.d.ts",
        "./node_modules/**/*.*"
    ],
    "filesGlob": [
        "./feel-ui.ts",
        "./src/**/*.ts",
        "./typings/main.d.ts"
    ],
    "files": [
        "./feel-ui.ts",
        "./src/base-dialog.ts",
        "./src/button.ts",
        "./src/checkbox.ts",
        "./src/input.ts",
        "./src/menu-bar.ts",
        "./src/menu-panel.ts",
        "./src/notification-provider.ts",
        "./src/pipes/sort-pipe.ts",
        "./src/slider.ts",
        "./src/table.ts",
        "./src/toggle-button-group.ts",
        "./src/toggle-button.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
